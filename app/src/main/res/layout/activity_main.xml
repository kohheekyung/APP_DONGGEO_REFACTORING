<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#e8f8fc" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:background="@drawable/donggeo_logo" />

            <ImageView
                android:id="@+id/donggeofont"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="64dp"
                android:src="@drawable/dongdeos" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="236dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginBottom="10dp"
            android:background="#82CAFF"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="200dp"
                android:gravity="center"
                android:text="국기"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-200dp"
                android:gravity="center"
                android:text="국가"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="환율"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_height="53dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/flag1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="200dp"
                app:srcCompat="@drawable/north_korea" />

            <TextView
                android:id="@+id/country1"
                android:layout_marginLeft="-200dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rate1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/flag2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="200dp"
                app:srcCompat="@drawable/south_korea" />

            <TextView
                android:id="@+id/country2"
                android:layout_marginLeft="-200dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rate2"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/flag3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="200dp"
                app:srcCompat="@drawable/united_kingdom" />

            <TextView
                android:id="@+id/country3"
                android:layout_marginLeft="-200dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rate3"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:gravity="center">

            <ImageView
                android:id="@+id/flag4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="200dp"
                app:srcCompat="@drawable/vietnam" />

            <TextView
                android:id="@+id/country4"
                android:layout_marginLeft="-200dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rate4"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#e8f8fc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusableInTouchMode="true"
        app:itemTextColor="#303F9F"
        app:menu="@menu/navigation" />

</LinearLayout>